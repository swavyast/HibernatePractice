    <id name="id" column="id" type="string" length="32">
        <generator class="uuid" />
    </id>
    <list name="specialities" table="specialities">			<!-- FIXME -->
        <key column="id"/>
        <list-index column="spSort" />
        <element column="subject">
            <!-- <property name="subject" column="subject">FIXME : name attribute?</property> -->
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.ml.entity.Subject</param>
                <param name="useNamed">true</param>
            </type>
        </element>
    </list>
    <array name="classRoom">		<!-- FIXME -->
        <key column="id" />
        <index column="classIndex"></index>
        <element column="class" type="string" />
    </array>
    <property name="modeOfTeaching" column="mode">
        <type name="org.hibernate.type.EnumType">
            <param name="enumClass">com.ml.entity.ModeOfTeaching</param>
        </type>
    </property>
</class>

